<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pulse - A secure messaging app</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-sans text-white bg-gray-900 antialiased">
  <nav class="flex justify-between items-center px-6 py-4 bg-gray-800 shadow-lg fixed w-full z-50">
    <h1 class="text-2xl font-bold text-blue-600">Pulse</h1>
    <div class="flex gap-4">
      <a href="/login" class="px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 transition">Login</a>
      <a href="/register" class="px-4 py-2 bg-transparent border border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white transition">Register</a>
    </div>
  </nav>

  <main class="w-full h-screen flex flex-col items-center justify-center p-8 pt-32 text-center">
    <h1 class="text-4xl font-bold bg-gradient-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">A Secure Messaging App</h1>
    <p class="max-w-2xl text-lg mt-4 opacity-75" id="typewriter-text"></p>
    <div class="flex gap-4 justify-center mt-8 flex-wrap">
      <a href="/login" class="px-6 py-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition">Login</a>
      <a href="/register" class="px-6 py-3 bg-blue-600 rounded-lg hover:bg-blue-500 shadow-lg hover:shadow-xl transition">Create Account</a>
    </div>
  </main>

  <footer class="fixed bottom-0 w-full text-sm text-gray-500 text-center p-3">
    © 2025 Playstation451 • All rights reserved
  </footer>

  <script>
  const messages = [
    "Tired of discord banning you but you cant to message your friends?",
    "On Pulse you can chat freely and securely",
    "Welcome to Pulse."
  ];
  let messageIndex = 0;
  let charIndex = 0;
  const element = document.getElementById('typewriter-text');
  
  element.classList.add('text-opacity-75', 'whitespace-pre-line', 'typewriter-cursor')
  const typeSpeed = 50;
  const deleteSpeed = 20;
  const delayBetweenMessages = 2000;
  
  function typeWriter() {
    if (charIndex <= messages[messageIndex].length) {
      element.textContent = messages[messageIndex].substring(0, charIndex);
      charIndex++;
      setTimeout(typeWriter, typeSpeed);
    } else if (messageIndex === messages.length - 1) {
      element.classList.add('typewriter-cursor');
    } else {
      setTimeout(deleteWriter, typeSpeed);
    }
  }

  function deleteWriter() {
    if (charIndex > 0) {
      charIndex--;
      element.textContent = messages[messageIndex].substring(0, charIndex);
      setTimeout(deleteWriter, deleteSpeed);
      element.classList.remove('typewriter-cursor');
    } else {
      messageIndex = (messageIndex + 1) % messages.length;
      setTimeout(typeWriter, typeSpeed);
    }
  }

  typeWriter();
</script>

  <style>
    body::-webkit-scrollbar {
      width: 4px;
    }
    body::-webkit-scrollbar-track {
      background: #1e1e1e;
    }
    body::-webkit-scrollbar-thumb {
      background: #7289da;
      border: none;
    }
    body::-webkit-scrollbar-thumb:hover {
      background: #6372e9;
    }
  .typewriter-cursor {
    position: relative;
    display: inline-block;
  }
  
  .typewriter-cursor::after {
    content: '';
    position: absolute;
    left: 100%;
    top: 0;
    width: 2px;
    height: 100%;
    background: white;
    animation: blink 1s infinite;
    margin-left: 4px;
  }

  @keyframes blink {
    0%, 50% { opacity: 0; }
    50%, 100% { opacity: 1; }
  }
  </style>
</body>
</html>