<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pulse</title>
    <link href='https://fonts.googleapis.com/css?family=Be+Vietnam+Pro' rel='stylesheet'>
    <style>
        body {
            font-family: 'Be Vietnam Pro', sans-serif;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: row; 
            justify-content: flex-start; 
            align-items: center; 
            min-height: 100vh;
            margin: 0;
            box-sizing: border-box;

        }
        .login-content {
            padding: 20px; 
        }
        .line {
            width: 4px;
            background-color: #000000; 
            height: 100vh; 
            margin-left: 4px; 
        }
        h2 {
            width: 300px; 
            text-align: center;
            margin-bottom: 20px;
        }
        form {
            width: 300px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-group input[type="text"],
        .form-group input[type="password"],
        .form-group input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #000000;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
        }
        .form-group button:hover {
            background-color: #333333;
        }
        .toggle-link {
            display: block;
            text-align: center;
            margin-top: 10px;
            color: #000000;
            text-decoration: none;
            cursor: pointer;
        }
        .toggle-link:hover {
            text-decoration: underline;
        }
        .hidden {
            display: none;
        }
        .toggle-link {
            background-color: transparent;
            color: #000000;
            padding: 0;
            border: none;
            cursor: pointer;
        }
    .toggle-link {
        background-color: transparent;
        color: #000000;
        padding: 0;
        border: none;
        cursor: pointer;
    }
    .error-message {
        width: 300px;
        color: red;
        text-align: center;
        margin-bottom: 15px;
        word-break: break-word;
    }
    .loading-bar {
        position: fixed;
        top: 0;
        left: 0;
        height: 3px;
        background-color: #007bff; 
        width: 0;
        z-index: 1000;
        transition: width 0.4s ease-in-out, opacity 0.5s ease-out;
        opacity: 1;
    }
    .loading-bar.finished {
        opacity: 0;
        width: 100%;
    }
    </style>
</head>
<body>
    <div class="login-content">
    <div id="loading-bar" class="loading-bar"></div>
        <div id="login-form-container">
            <h2>Login</h2>
            <% if (error) { %>
                <p class="error-message"><%= error %></p>
            <% } %>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <button type="submit">Log In</button>
                </div>
            </form>
            <a href="#" class="toggle-link" id="show-register">Need an Account?</a>
        </div>

        <div id="register-form-container" class="hidden">
            <h2>Register</h2>
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="username_reg">Username</label>
                    <input type="text" id="username_reg" name="username" required>
                </div>
                <div class="form-group">
                    <label for="password_reg">Password</label>
                    <input type="password" id="password_reg" name="password" required>
                </div>
                <div class="form-group">
                    <label for="repeat_password">Repeat password</label>
                    <input type="password" id="repeat_password" name="repeat_password" required>
                </div>
                <div class="form-group">
                    <button type="submit">Register</button>
                </div>
            </form>
            <a href="#" class="toggle-link" id="show-login">Already have an account?</a>
        </div>
    </div>
    <div class="line"></div>
    <script>
        const loginContainer = document.getElementById('login-form-container');
        const registerContainer = document.getElementById('register-form-container');
        const showRegisterLink = document.getElementById('show-register');
        const showLoginLink = document.getElementById('show-login');

        showRegisterLink.addEventListener('click', (e) => {
            e.preventDefault();
            loginContainer.classList.add('hidden');
            registerContainer.classList.remove('hidden');
        });

        showLoginLink.addEventListener('click', (e) => {
            e.preventDefault();
            registerContainer.classList.add('hidden');
            loginContainer.classList.remove('hidden');
        });
    </script>
    <script>
        const loginForm = document.querySelector('#login-form-container form');
        const registerForm = document.querySelector('#register-form-container form');
        const loadingBar = document.getElementById('loading-bar');

        function startLoading() {
            loadingBar.style.width = '30%';
            setTimeout(() => {
                loadingBar.style.width = '70%';
            }, 400);
        }

        loginForm.addEventListener('submit', startLoading);
        registerForm.addEventListener('submit', startLoading);
    </script>
</body>
</html>